<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#2bb0b9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.user.UserActivity">

        <ImageView
            android:id="@+id/logo_iv"
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:elevation="2dp"
            android:src="@drawable/logo"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/beginning_cover_iv"
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:background="@drawable/beginning_style"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </FrameLayout>

        <TextView
            android:textSize="16sp"
            android:padding="12dp"
            android:gravity="center"
            android:textAlignment="center"
            android:visibility="gone"
            android:id="@+id/intro_tv"
            android:text="@string/intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/logo_iv"
            app:layout_constraintStart_toStartOf="@+id/logo_iv"
            app:layout_constraintTop_toBottomOf="@+id/logo_iv" />

        <com.google.android.material.button.MaterialButton
            android:visibility="gone"
            app:layout_constraintVertical_bias="1"
            android:layout_marginBottom="140dp"
            android:id="@+id/make_request_button"
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:backgroundTint="#fff"
            android:text="@string/make_request"
            android:textSize="18sp"
            app:cornerRadius="8dp"
            app:rippleColor="@color/colorRippleLight"
            android:textColor="@color/colorTypoDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/intro_tv" />

        <com.google.android.material.button.MaterialButton
            android:visibility="gone"
            android:id="@+id/employee_button"
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="#fff"
            android:text="@string/employees"
            android:textColor="@color/colorTypoDark"
            android:textSize="18sp"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="@+id/make_request_button"
            app:layout_constraintStart_toStartOf="@+id/make_request_button"
            app:layout_constraintTop_toBottomOf="@+id/make_request_button"
            app:rippleColor="@color/colorRippleLight" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>