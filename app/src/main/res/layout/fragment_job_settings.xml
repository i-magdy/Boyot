<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <com.google.android.material.button.MaterialButton
           android:backgroundTint="@color/colorAccent"
           android:id="@+id/to_appointment_button"
           android:layout_width="match_parent"
           android:layout_marginStart="16dp"
           android:layout_marginEnd="16dp"
           android:layout_marginTop="4dp"
           android:layout_marginBottom="4dp"
           android:elevation="4dp"
           app:cornerRadius="4dp"
           android:padding="4dp"
           android:textSize="26sp"
           app:rippleColor="@color/colorAccentDark"
           android:text="@string/appointment_button"
           android:layout_height="64dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/edit_job_button"
            android:layout_width="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:elevation="4dp"
            app:cornerRadius="4dp"
            android:padding="4dp"
            android:backgroundTint="@color/colorAccent"
            android:textSize="26sp"
            app:rippleColor="@color/colorAccentDark"
            android:text="@string/edit_job_title"
            android:layout_height="64dp"/>


        <com.google.android.material.button.MaterialButton
            android:visibility="gone"
            android:id="@+id/remove_appointment_button"
            android:layout_width="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:elevation="4dp"
            app:cornerRadius="4dp"
            android:padding="4dp"
            android:backgroundTint="@color/colorSecondary"
            android:textSize="21sp"
            app:rippleColor="@color/colorSecondaryDark"
            android:text="@string/remove_appointment"
            android:layout_height="64dp"/>

        <LinearLayout
            android:id="@+id/appointment_approved_item"
            android:padding="8dp"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/item_ripple"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/appointment_approved_checkbox"
                android:clickable="false"
                android:layout_marginStart="16dp"
                android:layout_gravity="start|center"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <TextView
                android:layout_marginStart="32dp"
                android:padding="4dp"
                android:textSize="21sp"
                android:text="@string/appointment_approved"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/work_delay_item"
            android:padding="8dp"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/item_ripple"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/work_delay_radio"
                android:clickable="false"
                android:layout_marginStart="16dp"
                android:layout_gravity="start|center"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <TextView
                android:layout_marginStart="32dp"
                android:padding="4dp"
                android:textSize="21sp"
                android:text="@string/state_work_delayed"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/work_canceled_item"
            android:padding="8dp"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/item_ripple"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/work_canceled_radio"
                android:clickable="false"
                android:layout_marginStart="16dp"
                android:layout_gravity="start|center"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <TextView
                android:layout_marginStart="32dp"
                android:padding="4dp"
                android:textSize="21sp"
                android:text="@string/cancel"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:padding="8dp"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/item_ripple"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginStart="16dp"
                android:layout_gravity="start|center"
                android:src="@drawable/ic_edit"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <LinearLayout
                android:layout_marginStart="32dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:text="@string/last_modified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/auth_tv"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>