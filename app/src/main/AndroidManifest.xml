<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.boyoot.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".ui.appointment.CheckingAppointmentDialog"
            android:theme="@style/DialogTheme"/>
        <activity
            android:name=".ui.googleSheet.UpdateContactDialog"
            android:theme="@style/DialogTheme" />
        <activity android:name=".ui.appointment.ChooseAppointmentActivity" />
        <activity android:name=".ui.appointment.AppointmentActivity" />
        <activity android:name=".ui.appointment.AppointmentListActivity" />
        <activity
            android:name=".ui.employees.AddTaskDialog"
            android:theme="@style/DialogTheme" />
        <activity android:name=".ui.employees.ProfileActivity" />
        <activity android:name=".ui.config.BranchesConfigActivity" />
        <activity android:name=".ui.config.PriceConfigActivity" />
        <activity android:name=".ui.login.ResetPasswordActivity" />
        <activity android:name=".ui.user.WebActivity" />
        <activity android:name=".ui.user.UserActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".ui.workDone.WorkDoneActivity" />
        <activity android:name=".ui.workDelay.WorkDelayActivity" />
        <activity android:name=".ui.dateApproved.DateApprovedActivity" />
        <activity android:name=".ui.datePicked.DatePickedActivity" />
        <activity android:name=".ui.preparedContacts.PreparedContactsActivity" />
        <activity android:name=".ui.locationNeeded.LocationNeededActivity" />
        <activity android:name=".ui.googleSheet.GoogleSearchActivity" />
        <activity android:name=".ui.contact.EditContactActivity" />
        <activity android:name=".ui.contact.ContactActivity" />
        <activity android:name=".ui.googleSheet.GoogleSheetActivity" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
    </application>

</manifest>